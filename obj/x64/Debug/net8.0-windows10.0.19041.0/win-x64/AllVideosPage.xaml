<?xml version="1.0" encoding="utf-8"?>
<Page
  x:Class="winui_local_movie.AllVideosPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="using:winui_local_movie"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- 视频列表 -->
    <GridView x:ConnectionId='2' x:Name="VideosGridView"
              Grid.Row="0"
              SelectionMode="Single"
              IsItemClickEnabled="True"
                                                  >
      <GridView.ItemTemplate>
    <DataTemplate                              >
        <StackPanel x:ConnectionId='7' Width="200" Height="180" Margin="5">
            <!-- 上方缩略图区域 -->
            <Border x:ConnectionId='8' Background="LightGray" Height="100" 
                                             >
                <Image x:ConnectionId='15'                                              
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Border>
            
            <!-- 下方按钮区域 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,5,0,0">
                <Button x:ConnectionId='11' Content="❤" 
                        FontSize="16"
                        Width="40"
                        Height="40"
                        Margin="2"
                                                    
                                      />
                <Button x:ConnectionId='12' Content="⏱" 
                        FontSize="16"
                        Width="40"
                        Height="40"
                        Margin="2"
                                                      
                                      />
                <Button x:ConnectionId='13' Content="🗑" 
                        FontSize="16"
                        Width="40"
                        Height="40"
                        Margin="2"
                                                  
                                      />
                <Button x:ConnectionId='14' Content="ℹ" 
                        FontSize="16"
                        Width="40"
                        Height="40"
                        Margin="2"
                                                   
                                      />
            </StackPanel>
            
            <!-- 视频标题和时长 -->
            <TextBlock x:ConnectionId='9'                       
                       FontWeight="Bold" 
                       TextWrapping="Wrap"
                       MaxLines="1"
                       Margin="0,2,0,0"/>
            <TextBlock x:ConnectionId='10'                                          
                       FontSize="12" 
                       Foreground="Gray"/>
        </StackPanel>
    </DataTemplate>
</GridView.ItemTemplate>
    </GridView>

    <!-- 分页控件 -->
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">
      <Button x:ConnectionId='3' x:Name="PreviousPageButton"
              Content="上一页"
                                              
              Margin="5"/>
      <TextBlock x:ConnectionId='4' x:Name="PageInfoText"
                 VerticalAlignment="Center"
                 Margin="10,0"/>
      <Button x:ConnectionId='5' x:Name="NextPageButton"
              Content="下一页"
                                          
              Margin="5"/>
    </StackPanel>
  </Grid>
</Page>

