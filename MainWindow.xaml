<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="winui_local_movie.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="winui_local_movie">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮栏 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="8" Spacing="8">
            <Button Content="首页" Click="GoHome_Click"/>
            <Button Content="稍后播放" Click="ShowLater_Click"/>
            <Button Content="喜欢" Click="ShowLiked_Click"/>
        </StackPanel>

        <!-- 主内容区 -->
        <Frame x:Name="ContentFrame" Grid.Row="1" Margin="8"/>
    </Grid>
</Window>